@{
	/* Login View */
}
<header>
	<h2>@ViewData["Title"]</h2>
</header>

<main class="auto-center">
	<form class="form-vertical" action="/api/v1/auth/login" method="POST">
		<div>
			<input class="input-control" name="Name" type="text" placeholder="E-mail" required>
		</div>

		<div>
			<input class="input-control" name="Secret" type="password" placeholder="Password" required>
		</div>

		<input class="b b-regular" type="submit" value="Submit">
	</form>
</main>